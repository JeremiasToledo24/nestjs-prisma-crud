generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Chat {
  id                 String    @id @default(uuid())
  createdAt          DateTime  @default(now())
  title              String
  message            String
  senderId           String
  lastMessageAt      DateTime?
  lastMessagePreview String?
  messages           Message[]
}


model Message {
  id        String   @id @default(uuid())
  chatId    String
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
  senderId  String
  content   String
  imagePath String?
  createdAt DateTime @default(now())
  editedAt  DateTime?
  deletedAt DateTime?

  @@index([chatId])
}